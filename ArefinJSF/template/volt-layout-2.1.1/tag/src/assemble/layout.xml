<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    
    <id>layout</id>
    <formats>
        <format>zip</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/volt-layout</directory>
            <outputDirectory>/resources/volt-layout</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp</directory>
            <includes>
                <include>404.xhtml</include>
                <include>access-denied.xhtml</include>
                <include>login.xhtml</include>
                <include>empty-page.xhtml</include>
                <include>error.xhtml</include>
                <include>promotion-page.xhtml</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/WEB-INF</directory>
            <includes>
                <include>*.xhtml</include>
            </includes>
            <outputDirectory>/WEB-INF</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/less</directory>
            <includes>
                <include>/layout/volt-layout.less</include>
                <include>/variables/layout-variables.less</include>
            </includes>
            <outputDirectory>/less</outputDirectory>
        </fileSet>
    </fileSets>
    
</assembly>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    
    <id>theme</id>
    <formats>
        <format>jar</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-volt</directory>
            <outputDirectory>/META-INF/resources/primefaces-volt</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/WEB-INF</directory>
            <outputDirectory>/META-INF/</outputDirectory>
            <includes>
                <include>faces-config.xml</include>
                <include>primefaces-volt.taglib.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>org/primefaces/volt/component/menu/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/less</directory>
            <includes>
                <include>/theme/theme.less</include>
                <include>/variables/theme-variables.less</include>
            </includes>
            <outputDirectory>/less</outputDirectory>
        </fileSet>
    </fileSets>
    
</assembly>